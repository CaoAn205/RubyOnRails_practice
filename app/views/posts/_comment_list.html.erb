<% if post.comments %>
  <% post.comments.each do |comment| %>
    <div class="mb-2">
      <% if comment.user == current_user %>
        <%= link_to "Delete comment", comment_path(comment),
          method: :delete, remote: true, class: "core-sprite delete-comment hide-text" %>
      <% end %>
      <span>
        <strong>
          <%= link_to comment.user.name, user_path(comment.user), remote: true,
            class: "no-text-decoration normal-color" %>
        </strong>
      </span>
      <span><%= comment.content %></span>
    </div>
  <% end %>
<% end %>
