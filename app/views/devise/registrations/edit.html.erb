<div class="conatiner flex-column align-items-center p-1 m-4 w-75">
  <div class="row justify-content-md-center">
    <div class="col col-3 justify-content-center align-self-lg-center ml-3">
      <%= image_tag user_avatar(@user), width: '160', height: '160', class: "round-img" %>
    </div>
    <div class="col col-8 float-left">
      <h3>Change Password</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="field">
          <div class="field-item m-2">
            Current password:<%= f.password_field :current_password, autocomplete: "current-password", class:"form-control btn-sm"%>
          </div>
          <div class="field-item m-2">
            New password:<%= f.password_field :password, autocomplete: "off", class:"form-control btn-sm"%>
          </div>
          <div class="field-item m-2">
            Password Confirmation:<%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control btn-sm" %>
          </div>
          <div class="field-item m-2">
            <%= f.submit "Update", class:"btn btn-outline-dark px-4" %>
          </div>
          <div class="field-item m-2">
            <%= button_to "Cancel account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,
                          class: "btn btn-outline-danger"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>